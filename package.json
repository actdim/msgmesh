{
    "name": "@actdim/msgmesh",
    "version": "1.1.2",
    "description": "A type-safe, modular message mesh for scalable async communication in TypeScript",
    "author": "Pavel Borodaev",
    "license": "Proprietary",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/actdim/msgmesh.git"
    },
    "bugs": {
        "url": "https://github.com/actdim/msgmesh/issues"
    },
    "homepage": "https://github.com/actdim/msgmesh/#readme",
    "keywords": [
        "typescript",
        "msg-bus",
        "service-bus",
        "messaging",
        "utility",
        "utils",
        "communication"
    ],
    "files": [
        "dist",
        "docs",
        "README.md",
        "LICENSE"
    ],
    "files(src)": [
        "src",
        "docs",
        "README.md",
        "LICENSE"
    ],
    "exports": {
        "./*": {
            "import": "./dist/*.es.js",
            "types": "./dist/*.d.ts"
        }
    },
    "typesVersions": {
        "*": {
            "*": [
                "dist/*.d.ts"
            ]
        }
    },
    "sideEffects": false,
    "sideEffects?": [],
    "packageManager": "pnpm@10.21.0",
    "scripts": {
        "test": "npx vitest --config=vitest.node.config.ts --no-cache",
        "test:w": "npx vitest --config=vitest.node.config.ts --watch",
        "test:v8": "npx vite",
        "lint": "eslint . -f visualstudio --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
        "build": "tsc -b && vite build",
        "pnpm:u": "pnpm update",
        "pnpm:ou": "pnpm outdated",
        "ncu:l": "ncu",
        "ncu:u": "ncu -u",
        "ncu:ud": "ncu -u --dev",
        "nvm:la": "nvm list available",
        "nvm:il": "nvm install lts",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "peerDependencies": {
        "@actdim/utico": "^1.0.4",
        "rxjs": "^7.8.2",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@types/chai": "^5.2.3",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.10.0",
        "@typescript-eslint/eslint-plugin": "^8.46.3",
        "@typescript-eslint/parser": "^8.46.3",
        "chai": "^6.2.0",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-formatter-visualstudio": "^9.0.1",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^16.5.0",
        "mocha": "^11.7.5",
        "npm-check-updates": "^19.1.2",
        "prettier": "^3.6.2",
        "prettier-plugin-classnames": "^0.8.5",
        "shx": "^0.4.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.3",
        "vite": "^7.2.2",
        "vite-plugin-dts": "^4.5.4",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^4.0.8"
    }
}
