{
    "name": "@actdim/msgmesh",
    "version": "0.9.0",
    "description": "A type-safe, modular message mesh for scalable async communication in TypeScript",
    "author": "Pavel Borodaev",
    "license": "Proprietary",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "https://github.com/actdim/msgmesh.git"
    },
    "bugs": {
        "url": "https://github.com/actdim/msgmesh/issues"
    },
    "homepage": "https://github.com/actdim/msgmesh/#readme",
    "keywords": [
        "typescript",
        "msg-bus",
        "service-bus",
        "messaging",
        "utility",
        "utils",
        "communication"
    ],
    "files": [
        "dist",
        "docs",
        "README.md",
        "LICENSE"
    ],
    "files(src)": [
        "src",
        "docs",
        "README.md",
        "LICENSE"
    ],
    "exports": {
        "./*": {
            "import": "./dist/*.es.js",
            "types": "./dist/*.d.ts"
        }
    },
    "typesVersions": {
        "*": {
            "*": [
                "dist/*.d.ts"
            ]
        }
    },
    "sideEffects": false,
    "sideEffects?": [],
    "scripts": {
        "build": "tsc && vite build",
        "test": "npx vitest",
        "wtest": "npx vitest --watch",
        "dtest": "node --inspect-brk node_modules/vitest/vitest.mjs run --poolOptions.threads.singleThread",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
    },
    "peerDependencies": {
        "rxjs": "^7.8.1",
        "uuid": "^9.0.1",
        "@actdim/utico": "^0.9.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.30",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "eslint": "^8.53.0",
        "eslint-import-resolver-typescript": "^4.3.4",
        "path": "^0.12.7",
        "tslib": "^2.8.1",
        "typescript": "^5.8.3",
        "vite": "^5.4.18",
        "vite-plugin-dts": "^4.5.3",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.1.2"
    }
}
